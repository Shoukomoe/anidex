<%- include("./partials/header") %>

<!---------- Episode Data ---------->

<div class="container" style="margin-top: 15px;">
    <h4>List Of Episodes</h4>
    <hr>
    <% data["episodes"].forEach(function(epi){ %>
        <h5 style="margin-bottom: 10px;"><%= epi["episode_id"] %>. <%= epi["title"] %> 
        <% if( epi["title_japanese"] != null){ %>
            ( <%= epi["title_japanese"] %> )
        <% } %>
        </h5>
        <% if( epi["title_romanji"] != null){ %>
        <h6 style="display: inline-block; margin-bottom: 7px;">Title Romanji:</h6> 
            ( <%= epi["title_romanji"] %> )
        <br>
        <% } %>
        <% if( epi["aired"] != null){ %>
        <h6 style="display: inline-block; margin-bottom: 7px;">Aired:</h6> 
            <%= epi["aired"].substring(0,10) %>
        <br>
        <% } %>
        <h6 style="display: inline-block; margin-bottom: 7px;">Filler:</h6> <%= epi["filler"] %>
        <br>
        <h6 style="display: inline-block; margin-bottom: 7px;">Recap:</h6> <%= epi["recap"] %>
        <hr>
    <% }) %>
</div>