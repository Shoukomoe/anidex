<%- include("./partials/header") %>

<div class="container" style="margin-top: 15px;">
    <h3 style="margin-top: 25px; margin-bottom: 15px;">Top Anime Of All Time</h3>
    <hr>
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% data["top"].forEach(function(anime){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img class="shadow" style="width: 225px; height: 346px; object-fit: cover;" src="<%= anime["image_url"] %>">
                    <div class="caption">
                        <h5 style="margin-bottom: 7px; margin-top: 7px;"><%= anime["rank"] %>. <%= anime["title"] %></h5>
                        <hr style="margin-bottom: 3px; margin-top: 3px;">
                    </div>
                    <% if( anime["end_date"] != null ){ %>
                        <h6 style="display: inline-block;" style="margin-bottom: 5px;">Aired: </h6> <%= anime["start_date"] %> to <%= anime["end_date"] %><br>
                    <% } %>
                    <% if( anime["score"] != null ){ %>
                        <h6 style="display: inline-block;">Score: </h6> <%= anime["score"] %><br>
                    <% } %>
                    <p>
                        <a href="/anime/<%= anime["mal_id"] %>" class="btn btn-info">More Info</a>
                    </p>
                </div>
            </div>  
        <% }); %>
        <br>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <%if(page==1){%>
                <% for(var i=parseInt(page);i<parseInt(page)+7;i++){%>
                    <li class="page-item" style="margin-right: 0;">
                        <a class="page-link" href="/top/anime/<%=i%>">
                            <%=i%>
                        </a>
                    </li
                <%}%>
            <%} else if(page>1){%>
                <% for(var i=parseInt(page)-1;i<parseInt(page)+6 && i < 11 ;i++){%>
                    <li class="page-item" style="margin-left: 0;">
                        <a class="page-link" href="/top/anime/<%=i%>">
                            <%=i%>
                        </a>
                    </li>
                <%}%>
            <%}%>
        </ul>
    </nav>
</div>


