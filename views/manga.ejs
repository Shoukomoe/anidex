<%- include("./partials/header") %>

<div class="container" style="margin-top: 15px;">
    <h3 style="margin-top: 30px;">Top Manga Of All Time</h3>
    <hr>
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% data["top"].forEach(function(manga){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img class="shadow" style="width: 225px; height: 346px; object-fit: cover;" src="<%= manga["image_url"] %>">
                    <div class="caption">
                        <h5 style="margin-bottom: 7px; margin-top: 7px; display: inline-block; vertical-align: middle;"><%= manga["rank"] %>. <%= manga["title"] %></h5>
                        <% if( manga["end_date"] == null) { %>
                            <span class="badge badge-primary" style="vertical-align: middle; display: inline-block;">Publishing</span>
                        <% } %>
                        <hr style="margin-bottom: 3px; margin-top: 3px;">
                    </div>
                    <% if( manga["end_date"] != null ){ %>
                        <h6 style="display: inline-block;" style="margin-bottom: 5px;">Aired: </h6> <%= manga["start_date"] %> to <%= manga["end_date"] %><br>
                    <% } else{ %>
                        <h6 style="display: inline-block;" style="margin-bottom: 5px;">Aired: </h6> <%= manga["start_date"] %> to -<br>
                    <% } %>
                    <% if( manga["score"] != null ){ %>
                        <h6 style="display: inline-block;">Score: </h6> <%= manga["score"] %><br>
                    <% } %>
                    <p>
                        <a href="/manga/<%= manga["mal_id"] %>" class="btn btn-info">More Info</a>
                    </p>
                </div>
            </div>  
        <% }); %>
    </div>
</div>


