<%- include("./partials/header") %>

<div class="container">
    <div class="card mb-3">
        <h6 class="card-header text-center">If You Liked It You May Like These</h6>
        <div class="tab-content">
            <div class="row m-0">
                <% data["recommendations"].forEach(function(recom){ %>
                <div class="col-md-3 d-flex border-bottom p-2">
                    <div class="float-left mr-2">
                        <div class="hover rounded">
                            <a href="/anime/<%= recom["mal_id"] %>">
                                <img class="rounded max-width sm_recom_cover" src="<%= recom["image_url"] %>">
                            </a>
                        </div>
                        <div class="pt-0 pb-1 mb-1 title d-flex align-items-center flex-nowrap">
                            <a class="anime_title text-truncate" href="/anime/<%= recom["mal_id"] %>"><%= recom["title"] %></a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>