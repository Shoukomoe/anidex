<%- include("./partials/header") %>

<div class="container" style="margin-top: 15px;">
    <h3 style="margin-top: 25px; margin-bottom: 15px;">If you liked it you may like these</h3>
    <hr>
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% data["recommendations"].forEach(function(recom){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img style="width: 225px; height: 346px; object-fit: cover;" src="<%= recom["image_url"] %>">
                    <div class="caption">
                        <h5 style="margin-bottom: 7px; margin-top: 7px;"><%= recom["title"] %></h5>
                    </div>
                    <p>
                        <a href="/anime/<%= recom["mal_id"] %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>  
        <% }); %>
    </div>
</div>


