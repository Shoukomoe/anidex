<!-- --------Search Results-------- -->

<%- include("./partials/header") %>

<div class="container" style="margin-top: 15px;">
    <h3 style="margin-top: 25px; margin-bottom: 15px;">Search Results</h3>
    <hr>
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% data["results"].forEach(function(anime){ %>
            <div class="col-md-3 col-sm-6" style="margin-bottom: 10px;">
                <div class="thumbnail">
                    <img style="width: 225px; height: 346px; object-fit: cover;" src="<%= anime["image_url"] %>">
                    <div class="caption">
                        <h5 style="margin-bottom: 7px; margin-top: 7px;"><%= anime["title"] %></h5>
                        <hr style="margin-bottom: 3px; margin-top: 3px;">
                    </div>
                        <p class="card-text"><%= anime["synopsis"] %></p>
                        <% if( anime["end_date"] != null ){ %>
                            <h6 style="display: inline-block;" style="margin-bottom: 5px;">Aired: </h6> <%= anime["start_date"].substring(0,10) %> to <%= anime["end_date"].substring(0,10) %><br>
                        <% } %>
                        <% if( anime["score"] != null && anime["score"] != '0' ){ %>
                            <h6 style="display: inline-block;">Score: </h6> <%= anime["score"] %><br>
                        <% } %>
                        <% if( anime["type"] != 'TV' && anime["type"] != 'Movie' && anime["type"] != 'Music' && anime["type"] != 'ONA' ){ %>
                            <a href="/manga/<%= anime["mal_id"] %>" class="btn btn-primary">More Info</a>
                        <% } else { %>
                            <a href="/anime/<%= anime["mal_id"] %>" class="btn btn-primary">More Info</a>
                        <% } %>
                </div>
            </div>  
        <% }); %>
    </div>
</div>
