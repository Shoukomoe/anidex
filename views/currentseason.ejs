<!--  LANDING PAGE  -->

<%- include("./partials/header") %>

<div class="container" style="margin-top: 15px;">
    <h4 style="margin-top: 25px; margin-bottom: 15px;"><%= data.season_name %> <%= data.season_year %> Anime</h4>
    <hr>
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% for (var i = 0; i < 12; i++) { %>
            <% var obj = data.anime[i]; %>
            <div class="col-md-3 col-sm-6" style="margin-bottom: 10px;">
                <div class="thumbnail">
                    <img style="width: 225px; height: 346px; object-fit: cover;" src="<%= obj.image_url %>">
                    <div class="caption">
                        <h5 style="margin-bottom: 7px; margin-top: 7px;"><%= obj.title %></h5>
                        <hr style="margin-bottom: 3px; margin-top: 3px;">
                    </div>
                    <% if ( obj.airing_start != null){ %>
                        <h6 style="display: inline-block;">Airing Start: </h6>
                            <%= obj.airing_start.substring(0,10) %>
                    <% } %>
                        <p style="margin-bottom: 7px;" class="card-text"><%= obj.synopsis.substring(0,150) %> ...</p>
                    <% if( obj.genres != null ){ %>
                        <h6 style="display: inline-block; line-height: 65%; margin-bottom: 5px;">Genres: </h6> 
                        <% for( var j = 0; j < obj.genres.length; j++) { %>
                            <a href="/genre/<%= obj.genres[j]["mal_id"] %>" class="badge badge-pill badge-info"><%= obj.genres[j]["name"] %></a>
                        <% } %>
                        <br>
                    <% } %>
                    <% if( obj.source != null ){ %>
                        <h6 style="display: inline-block;">Source: </h6> <%= obj.source %><br>
                    <% } %>
                        <a href="/anime/<%= obj.mal_id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>  
        <% }; %>
    </div>
</div>